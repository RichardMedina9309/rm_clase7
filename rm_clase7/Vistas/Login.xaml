<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rm_clase7.Vistas.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de inicio" FontSize="20" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la contraseña" IsPassword="True"/>

            <Button x:Name="btnInicio" Text="Iniciar" Clicked="btnInicio_Clicked"/>
            <Button x:Name="btnRegistro" Text="Registrar" Clicked="btnRegistro_Clicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>